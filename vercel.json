{
  "version": 2,
  "buildCommand": "cd dpm-web && npm run build",
  "outputDirectory": "dpm-web/dist",
  "installCommand": "cd dpm-web && npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/mobile/attendee/(.*)", "destination": "/mobile/attendee/index.html" },
    { "source": "/mobile/staff/(.*)", "destination": "/mobile/staff/index.html" },
    { "source": "/mobile/attendee", "destination": "/mobile/attendee/index.html" },
    { "source": "/mobile/staff", "destination": "/mobile/staff/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/mobile/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key"
  }
}